<%= form_for(@movie) do |f| %>
  <h2><%= f.label :image_file_name %></h2>
  <p><%= f.text_field :image_file_name %></h2>
  <h2><%= f.label :title %></h2>
  <p><%= f.text_field :title, autofocus: true %></p>
  <h2><%= f.label :rating %></h2>
  <p><%= f.text_field :rating %></h2>
  <h2><%= f.label :director %></h2>
  <p><%= f.text_field :director %></h2>
  <h2><%= f.label :total_gross %></h2>
  <p><%= f.text_field :total_gross %></h2>
  <h2><%= f.label :release_date %></h2>
  <p><%= f.date_field :release_date %></h2>
  <h2><%= f.label :description %></h2>
  <p><%= f.text_area :description, col:49, rows:4 %></p>
  <h2><%= f.label :cast %></h2>
  <p><%= f.text_field :cast %></h2>
  <h2><%= f.label :duration %></h2>
  <p><%= f.text_field :duration %></h2><br>
  <%= f.submit %> |
  <%= link_to "Go back", movie_path(@movie.id) %>
<% end %>
