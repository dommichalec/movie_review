<%= form_for(@movie) do |f| %>
  <h2><%= f.label :title %></h2>
  <p><%= f.text_field :title, autofocus: true %></p>
  <h2><%= f.label :rating %></h2>
  <p><%= f.text_field :rating %></h2>
  <h2><%= f.label :total_gross %> <em>(543.3 for $5,433,000)</em></h2>
  <p><%= f.text_field :total_gross %></h2>
  <h2><%= f.label :release_date %></h2>
  <p><%= f.date_field :release_date %></h2>
  <h2><%= f.label :description %></h2>
  <p><%= f.text_area :description, col:49, rows:4 %></p>
  <%= f.submit %>
<% end %>
